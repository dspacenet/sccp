---Module that defines the operational semantics of the language.
mod SCCP is
 inc SCCP-SYMBOLS .
 pr STRING-PATTERN .
 pr CONST .
 
 var C1 : ConstSet .
 var S1 : Const .
 
 var C : Const .
 vars CL CL' TM TM' : Cloud .
 vars P Q P' : SpaInstruc .
 var SP : SpaInstruc .
 var i : Nat .
 var F : ForestConstSet .
 var X : Qid .
 
 ---Rules for Tell Operator
 rl < tell(C) ; CL > =>
 < skip ; insertel(C,CL) > .
 
 rl < tell(C) || Q ; CL > =>
 < skip || Q ; insertel(C,CL) > .
 ------
 
 ---Rules for When Do Operator 
 crl < when C do P ; (S1 , C1)[F] > =>
 < P ; (S1 , C1)[F] > 
 if 
 (S1 | C) => ("" | "") .
 
 crl < Q || when C do P ; (S1 , C1)[F] > => 
 < Q || P ; (S1 , C1)[F] > 
 if 
 (S1 | C) => ("" | "") .
 ------
 
 ---Rules for Spatial instructions
 crl [SpaInstruc] :
 < s(P,i) ; CL > => 
 < s(P',i) ; CL U [CL'] i > 
 if 
 < P ; (CL) ^ i > => 
 < P' ; CL' > /\ P =/= P' .

 crl [SpaInstruc2] :
 < Q || s(P,i) ; CL > => 
 < Q || s(P',i) ; CL U [CL'] i > 
 if 
 < P ; (CL) ^ i > => 
 < P' ; CL' > /\ P =/= P' .
 ------
 
 ---Rules for Recursion instructions
 crl [Rec] : 
 < rec X(P) ; CL > => 
 < P' ; CL' > 
 if < replaceVar(P,X,rec X(P)) ; CL > => 
 < P' ; CL' > .
 
  crl [Rec2] : 
 < rec X(P) || Q ; CL > => 
 < P' || Q ; CL' > 
 if < replaceVar(P,X,rec X(P)) ; CL > => 
 < P' ; CL' > .
 ------
 
endm
