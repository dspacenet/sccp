mod SYNTAXMOD is
 inc SCCP .
 
 op [_]_ : SpaInstruc Nat -> SpaInstruc .
 op xtr : SpaInstruc Nat -> SpaInstruc . 

 
 var P : SpaInstruc .
 var i : Nat .
 
 eq [P]i = s(P,i) .
 eq xtr(P,i) = x(P,i) .
 eq enter i do P = s(P,i) .
 eq exit i do P = x(P,i) .
 eq P @ i = s(P,i) . 
 eq P ^ i = x(P,i ) . 
 
endm


mod SCCP-RUN is
  pr SYNTAXMOD .
  op Init : -> Conf . 
  eq Init = < tell(" hello ") @ 1 ; empty[empty-forest] > .
endm

rew in SCCP-RUN : Init . 


